@model leave_management.Models.CreateLeaveRequestVMClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateLeaveRequestVMClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveRequestID" class="control-label"></label>
                @Html.DropDownListFor(x => x.LeaveTypeID, new SelectList(Model.selectLeaveTypes, "Value", "Text"),"Select Lave Type", new {@class = "form-control"})
                <input asp-for="LeaveRequestID" class="form-control" />
                <span asp-validation-for="LeaveRequestID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control datepicker" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control datepicker" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveTypeID" class="control-label"></label>
                <input asp-for="LeaveTypeID" class="form-control" />
                <span asp-validation-for="LeaveTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply for Leave" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts 
{
    <script>
        $( function() {
            $(".datepicker").datepicker(
                {
                    dateFormat: "dd-MM-yy"
                }
            );
        } );
    </script>
}

